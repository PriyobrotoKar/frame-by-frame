{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["*.ts", "tests/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
